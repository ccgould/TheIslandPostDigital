<Page x:Class="TheIslandPostManager.Views.Pages.CheckOutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheIslandPostManager.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:controls="clr-namespace:TheIslandPostManager.Controls"
      controls:ImagesControlModule.Show="False"
      xmlns:converters="clr-namespace:TheIslandPostManager.Converters"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="CheckOutPage">

    <Page.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Margin="0" Grid.Column="0" Background="#231d23">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="SALE SUMMARY" 
                       FontWeight="Bold"
                       Foreground="White"
                       TextDecorations="Underline"
                       Margin="5"/>

            <!--Items List-->
            <ScrollViewer Grid.Row="1">
                <ui:ListView x:Name="Cart" IsTabStop="False"  IsEnabled="False"  Grid.Row="1" ItemsSource="{Binding Service.CurrentOrder.Cart}">
                    <ui:ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        FontSize="16"
                                                        FontTypography="Body"
                                                        Text="{Binding Amount}"
                                                        Margin="0,0,10,0"/>
                                
                                <ui:TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        FontSize="16"
                                                        FontTypography="Body"
                                                        Text="{Binding Description}" />
                                <ui:TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="2"
                                                        Grid.RowSpan="2"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Right"
                                                        FontSize="16"
                                                        FontTypography="Body"
                                                        Text="{Binding TotalCost,StringFormat=${0}}"
                                                        />
                            </Grid>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>

            </ScrollViewer>

            <Separator Grid.Row="2"/>

            <Grid Grid.Row="3" Margin="20
                      ,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Additional Discount:" 
                           Foreground="White"
                           Margin="0,5"/>

                <TextBlock Grid.Column="1" 
                           Text="0" 
                           Foreground="White"
                           HorizontalAlignment="Right"/>


                <TextBlock Text="Subtotal:" 
                               Foreground="White"
                               Grid.Row="1"/>

                <TextBlock Grid.Column="1"
                               Grid.Row="1"
                               Text="0" 
                               Foreground="White"
                               HorizontalAlignment="Right"/>

            </Grid>

            <Separator Grid.Row="4"/>

            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="aUTO"/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="SALE TOTAL"
                               VerticalAlignment="Bottom"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,5,10,0"/>

                <TextBlock Text="0 items"
                               Grid.Column="1"
                               FontSize="12"
                               VerticalAlignment="Bottom"
                               Foreground="White"/>


                <TextBlock Text="{Binding Service.CurrentOrder.CartTotal,StringFormat=${0}}"
                               Margin="20,0"
                               VerticalAlignment="Bottom"
                               Grid.Column="2"
                               FontSize="12"
                               Foreground="White"
                               />
            </Grid>

            <ui:ListView x:Name="Cart1" IsTabStop="False" Grid.Row="5" IsEnabled="False" ItemsSource="{Binding Service.CurrentOrder.PaymentTransactions}">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ui:TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        FontSize="16"
                                                        FontTypography="Body"
                                                        Text="{Binding PurchaseType}"/>
                            <ui:TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        FontSize="16"
                                                        FontTypography="Body"
                                                        HorizontalAlignment="Right"
                                                        Text="{Binding Amount,StringFormat=${0}}"  
                                                        Margin="10,0"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                                <ui:TextBlock
                                            FontSize="10"
                                            FontTypography="Body"
                                            Text="{Binding Date, StringFormat={}{0:MMMM dd yyyy -}}"/>
                                <ui:TextBlock
                                            FontSize="10"
                                            Margin="5,0"
                                            FontTypography="Body"
                                            Text="{Binding Time}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>

        </Grid>

        <Grid Grid.Column="1" Background="#2a272d">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Margin="0,20,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Amount to pay"
                           VerticalAlignment="Top"
                           Foreground="White"
                           FontSize="35"
                           Margin="20,0"
                           />

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border BorderThickness="1" BorderBrush="Gray" MouseLeftButtonUp="TextBox_MouseLeftButtonUp">
                        <ui:TextBlock Text="{Binding Total}"
                                      FontSize="30"
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Stretch"
                                      TextAlignment="Center"
                                      />
                    </Border>
                    <ui:TextBlock Text="Edit to make a partial payment"
                                  Grid.Row="1" Foreground="White"
                                  />
                </Grid>

            </Grid>


            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ui:Button Content="Card"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           Margin="5"
                           Command="{Binding PaymentAmountCommand}"
                           CommandParameter="card"
                           IsEnabled="{Binding SaleNotComplete}"/>
                
                <ui:Button Content="Cash"
                           Grid.Column="1"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           Margin="5"
                           Command="{Binding PaymentAmountCommand}"
                           CommandParameter="cash"
                           IsEnabled="{Binding SaleNotComplete}"/>
                
                <ui:Button Content="Bank"
                           Grid.Column="2"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           Margin="5"
                           Command="{Binding PaymentAmountCommand}"
                           CommandParameter="bank"
                           IsEnabled="{Binding SaleNotComplete}"/>

            </Grid>

            <ui:Button Content="Done" IsEnabled="{Binding SaleNotComplete,Converter={StaticResource InvertedBoolConverter}}" Grid.Row="2" Margin="10" HorizontalAlignment="Stretch" Background="#405ebc" MouseOverBackground="#425296" Command="{Binding DoneCommand}"/>

        </Grid>

    </Grid>
</Page>
