            </Border>-->

            <!--Bottom Section-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!--Store Items-->
                <ScrollViewer Grid.Column="0">
                    <ItemsControl  IsTabStop="False"  x:Name="ListViewProducts" ItemsSource="{Binding PurchaseItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="5" Height="170" Width="130" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" Margin="10" Padding="10">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding ElementName=dataPage, Path=ViewModel.ItemClickCommand}" CommandParameter="{Binding .}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="{Binding Amount}"  Visibility="{Binding AmountVisible}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.RowSpan="2" FontSize="100" FontWeight="Bold" Opacity=".2" Foreground="White"/>
                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="20" Foreground="White"/>

                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Cost" HorizontalAlignment="Left" Foreground="White"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Cost}" HorizontalAlignment="Right" Foreground="White"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <!--Cart Items-->
                <Border Grid.Column="1" Width="800" Background="#AE2d3436" Padding="30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>

                        </Grid.RowDefinitions>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                                <TextBlock Text="Cashier:" 
                                           Foreground="White" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0"
                                           Grid.Column="0"
                                           Grid.Row="0"/>
                            
                                <ComboBox  IsTabStop="False" 
                                           SelectedIndex="{Binding OrderService.CurrentOrder.Employee.EmployeeID}"  
                                           x:Name="ClerkCmbox" 
                                           ItemsSource="{Binding Employees}" 
                                           DisplayMemberPath="FirstName" 
                                           SelectedItem="{Binding Employee,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                           Grid.Column="1"
                                           Grid.Row="0"/>

                                <TextBlock Text="Email" 
                                           Foreground="White" 
                                           Margin="0,0,10,0"
                                           Grid.Column="0"
                                           Grid.Row="1"
                                           VerticalAlignment="Center"/>

                                <syncfusion:SfTextBoxExt
                                 x:Name="searchBox"
                                 SearchItemPath="Email"
                                 AutoCompleteMode="Suggest"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 MultiSelectMode="Delimiter"
                                 TokensWrapMode="Wrap"
                                 EnableAutoSize="True"
                                 Foreground="White"
                                 Background="Transparent"
                                 DropDownBackground="Gray"                                 
                                 IgnoreCase="True"
                                 Text="{Binding OrderService.CurrentOrder.Email, UpdateSourceTrigger=PropertyChanged}"
                                 ShowClearButton="True"
                                 ShowDropDownButton="True"
                                 AutoCompleteSource="{Binding Customers}"
                                Grid.Column="1"
                                Grid.Row="1"
                                 
                                 TextChanged="SfTextBoxExt_TextChanged">
                                    <syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Image Source="/Assets/applicationIcon-256.png" Grid.RowSpan="2" Margin="2" Stretch="Uniform" Width="12"/>

                                                <TextBlock Grid.Column="1" Text="{Binding FullName}" Margin="5 2"/>
                                                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Email}" Margin="5 2"/>
                                            </Grid>
                                        </DataTemplate>
                                    </syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                                    <syncfusion:SfTextBoxExt.NoResultsFoundTemplate>
                                        <DataTemplate>
                                            <Button Content="Add this person as a customer?" Command="{Binding AddNewPersonCommand}"/>
                                        </DataTemplate>
                                    </syncfusion:SfTextBoxExt.NoResultsFoundTemplate>
                                    <syncfusion:SfTextBoxExt.Watermark>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Assets/applicationIcon-256.png" 
                               Margin="2"/>
                                            <TextBlock Text="Please Add A Customer" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Opacity="0.5"/>
                                        </StackPanel>
                                    </syncfusion:SfTextBoxExt.Watermark>
                                </syncfusion:SfTextBoxExt>
                        </Grid>


                            <!--<Border Background="Gray">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Purchases" FontWeight="DemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"/>
                                <StackPanel Orientation="Horizontal" Grid.Column="1">
                                    <StackPanel Orientation="Horizontal">
                                        <ui:SymbolIcon ToolTip="Images Count" Symbol="Image16" FontSize="20" Filled="True" Foreground="White"/>
                                        <TextBlock ToolTip="Images Count" Text="{Binding OrderService.CurrentOrder.ApprovedImagesCount}" FontWeight="DemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10,0">
                                        <ui:SymbolIcon ToolTip="Prints Count" Symbol="Print16" FontSize="20" Filled="True" Foreground="White"/>
                                        <TextBlock ToolTip="Prints Count" Text="{Binding PrintCount}" FontWeight="DemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10,0">
                                        <ui:SymbolIcon ToolTip="Retail Count" Symbol="BuildingRetail24" FontSize="20" Filled="True" Foreground="White"/>
                                        <TextBlock ToolTip="Retail Count" Text="{Binding PrintCount}" FontWeight="DemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>-->

                        <ui:ListView x:Name="Cart" IsTabStop="False" Grid.Row="1" ItemsSource="{Binding OrderService.CurrentOrder.Cart}">
                            <ui:ListView.ItemTemplate>
                                <DataTemplate>
                                    <ui:CardExpander Grid.Column="0" Icon="{ui:SymbolIcon Cart16}">
                                        <ui:CardExpander.Header>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ui:TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        FontSize="16"
                                                        FontTypography="Body"
                                                        Text="{Binding Amount}"/>
                                                    <ui:TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        FontSize="16"
                                                        FontTypography="Body"
                                                        Text="|"  Margin="10,0"/>
                                                    <ui:TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="2"
                                                        FontSize="16"
                                                        FontTypography="Body"
                                                        Text="{Binding Description}" />
                                                    <ui:TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="3"
                                                        Grid.RowSpan="2"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Right"
                                                        FontSize="16"
                                                        FontTypography="Body"
                                                        Text="{Binding TotalCost}"
                                                        />
                                                </Grid>
                                                <ui:TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                FontSize="12"
                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                Text="{Binding Data}" />
                                                <ui:Button IsTabStop="False" 
                                                           Grid.RowSpan="2"
                                                           Grid.Column="2" 
                                                           ToolTip="Delete"
                                                           Command="{Binding ViewModel.DeleteCommand, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Page}}"
                                                           CommandParameter="{Binding .}" 
                                                           Appearance="Transparent"
                                                           Foreground="White"
                                                           Margin="20,0">
                                                    <ui:SymbolIcon Symbol="Delete12" FontSize="18"/>
                                                </ui:Button>
                                            </Grid>
                                        </ui:CardExpander.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Quantity"/>
                                            <ui:NumberBox Grid.Row="1"
                                                          Value="{Binding Amount}"
                                                          Margin="0,0,5,0"/>

                                            <TextBlock Text="Price"
                                                       Grid.Column="1"/>
                                            <ui:TextBox Grid.Row="1"
                                                        Grid.Column="1"
                                                        IsReadOnly="True"
                                                        Text="{Binding TotalCost}"
                                                        Margin="5,0,5,0"/>


                                            <TextBlock Text="Discount (%)"
                                                       Grid.Column="2"/>
                                            <ui:NumberBox Grid.Row="1"
                                                        Grid.Column="2"
                                                        Value="0"
                                                        IsReadOnly="True"
                                                        Margin="5,0,5,0"/>

                                            <TextBlock Text="Note"
                                                       Grid.Row="2"/>
                                            <ui:TextBox Grid.ColumnSpan="3"
                                                        MaxWidth="700"
                                                        Grid.Row="4"
                                                        Margin="0,5"
                                                        PlaceholderEnabled="True"
                                                        PlaceholderText="Enter a note about this product."
                                                        TextWrapping="Wrap"
                                                        AcceptsReturn="True"
                                                        />

                                        </Grid>
                                    </ui:CardExpander>
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>
                        </ui:ListView>

                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,10" Grid.Row="2">
                            <Run Text="10.00%: " Foreground="White"/>
                            <Run Text="{Binding OrderService.CurrentOrder.VatTotal}" Foreground="White"/>
                            <Run Text="{Binding OrderService.CurrentOrder.CartTotal,StringFormat=({0})}" Foreground="White"/>
                        </TextBlock>
                        
                        <Grid Margin="10,0" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding OrderService.CurrentOrder.Date}"   VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left" Foreground="White"/>

                            <TextBlock Grid.Column="1" Text="{Binding OrderService.CurrentOrder.CartTotal}" FontWeight="DemiBold" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Right" Foreground="White"/>

                        </Grid>

                        <ui:Button Content="Pay"
                                   Background="#405ebc"
                                   Grid.Row="4"
                                   HorizontalAlignment="Stretch"
                                   Command="{Binding PayCommand}"
                                   />


                    </Grid>
                </Border>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <!--<Button IsTabStop="False" Content="Complete Order" Background="Green" Foreground="White" Command="{Binding CompleteOrderCommand}" Width="200" Click="Button_Click"/>-->
                <Button IsTabStop="False" Content="Dashboard" Background="Orange" Foreground="White" Command="{Binding CancelOrderCommand}" Margin="20" Width="200"/>
                <Button IsTabStop="False" Content="Override" Background="Firebrick" Foreground="White" Command="{Binding OverrideCommand}" Width="200"/>
            </StackPanel>

        </Grid>

        <StackPanel
        Grid.Row="1"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

            <TextBlock
            x:Name="TextBlock"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="Red"
            Text="You must select a cashier to continue"
            Visibility="Collapsed" />

            <TextBlock
            x:Name="TextBlock1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="Red"
            Text="You must provide a passenger name to continue"
            Visibility="Collapsed" />

            <TextBlock
            Visibility="{Binding ShowImageCountOverMessage, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="Red"
            Text="Image count is over the allowed amount" />

            <TextBlock
             Visibility="{Binding ShowPrintCountOverMessage, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             FontSize="16"
             Foreground="Red"
             Text="Print count is over the allowed amount" />

            <!--<CheckBox
            x:Name="CheckBox"
            Margin="0,15,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Agree"
            FontSize="16" />-->
        </StackPanel>
    </Grid>
</Page>
